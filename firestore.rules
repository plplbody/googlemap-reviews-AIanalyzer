rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Places: Public Read (Search Results), Write via Server Action only (Admin SDK)
    match /places/{placeId} {
      allow read: if true;
      allow write: if false;
    }

    // Users: Private
    // Only the authenticated user can read/write their own data AND subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
